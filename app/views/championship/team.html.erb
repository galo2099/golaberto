    if (i == index) {
      tabs[i].addClassName('active-tab');
      divs[i].addClassName('active-tab-body');
    } else {
      tabs[i].removeClassName('active-tab');
      divs[i].removeClassName('active-tab-body');
    }
  }
  findSWF("campaign_graph").load(Object.toJSON(data[index]));
}

