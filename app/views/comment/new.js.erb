<% if @comment.valid? %>
  $("#comments").append(`<%= render(:partial => "comment/comment", :locals => { :comment => @comment }) %>`);
  $("#comments").animate({ backgroundColor: "#FFFF99" }, 3000, function() {
    // Animation complete.
    $(this).css("background-color", ""); // Reset background color after animation
  });
<% else %>
  alert(`<%= @comment.errors.full_messages %>`);
<% end %>
