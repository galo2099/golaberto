<table>
  <tr>
    <th><%= _("Name") %></th>
    <th><%= _("Location") %></th>
  </tr>

  <% @referees.each do |referee| %>
    <tr>
      <td><%= link_to referee.name, action: :show, id: referee %></td>
      <td><%= referee.location %></td>
      <% if can? :manage, referee %>
        <td><%= link_to image_tag('icons/pencil.png', alt: _('Edit')), action: 'edit', id: referee %></td>
        <td><%= link_to image_tag('icons/bin.png', alt: _('Destroy')), { action: 'destroy', id: referee }, data: { confirm: _('Are you sure?') }, post: true %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<%== pagy_nav @pagy if @pagy.pages > 1 %>
