html {
  min-width: 790px;
  min-height: 100%;
}

a {
  color: #963;
}
a:hover {
  color: #C60;
}

body {
  font-family: Arial, Helvetica, sans-serif;
  background-repeat: repeat-x;
  background-color: #3b3008;
  text-align: center;
}

.fieldWithErrors
{
  display: inline;
  color: #FF0000;
}

.fieldWithErrors input, .fieldWithErrors textarea, .fieldWithErrors select
{
  border: 2px solid red;
  display: inline;
  padding: 2px;
}

.container
{
  text-align: left;
  width: 790px;
  padding: 0px;
  background-color: #e3efca;
  margin: 0 auto;
}

.main h1
{
  background-color: #474d0f;
  font-size: 24px;
  color: #ffffff;
  padding: 5px 10px;
}

.main {
  background: url(<%= asset_path('bg.png') %>) repeat-y;
}

.content
{
  float: left;
  width: 560px;
  margin-top: 10px;
  padding: 10px;
}
.notice
{
  color: red;
  background-color: white;
  width: 100%;
  margin-top: 10px;
  text-align: center;
}

/******* menu : BEGIN *********/
.navigation {
  text-align: center;
  background-color: #abb561;
  color: #e3efca;
  font-size: 18px;
  font-weight: bold;
  line-height: 0.1;
  padding: 5px;
  margin-top: 5px;
  margin-bottom: 5px;
}

.navigation a
{
  color: #330;
  text-decoration: none;
  font-size: 12px;
  font-weight: bold;
  line-height: normal;
}

.navigation span
{
  color: #330;
  font-size: 12px;
  font-weight: bold;
  line-height: normal;
}

.navigation a:hover
{
  color: #e3efca;
}

.nav_side {
  float: left;
  font-weight: bold;
  width: 195px;
  padding-left: 3px;
  padding-right: 5px;
  min-height: 100%;
}
/******* menu : END *********/

/******* Topo : Begin *********/
.header {
	background-color: #8f983b;
	padding: 20px 10px 10px 5px;
        position: relative;
}
.header img {
	border: none;
}
/******* Topo : END *********/



/**************** CLASSIFICACAO : Begin ************/
.team_table
{
  font-size: 11px;
  width: 100%;
}

.team_table h3 {
  background-color: #330;
  color: #e3efca;
  font-size: 12px;
  font-weight: bold;
  margin-bottom: 1px;
  width: 100%;
  padding-top: 3px;
  padding-bottom: 3px;
}

.team_table h3 span {
  padding-left: 4px;
}

.table_head
{
   color: white;
   background-color: darkblue;
}
.table_line
{
   background-color: lightgray;
}
.class_table
{
  width: 100%;
}
.class_table .pos
{
  text-align: left;
}
.class_table .name
{
  width: 40%;
  text-align: left;
}
span.game_odds {
  font-size: xx-small;
  vertical-align: bottom;
}
.class_table .odds
{
  text-align: right;
}
.class_table th
{
  text-align: center;
}
.class_table td
{
  width: 5%;
  text-align: center;
}
.class_table a:link, a:visited
{
  color: black;
}
.table_line_even
{
   background-color: lightyellow;
}
.table_line_odd
{
	background-color: white;
}
.promoted
   {
   background-color: lightgreen;
   }
.relegated
   {
   background-color: #FFA0A0;
   }
/**************** CLASSIFICACAO : END ************/

.player_list {
  border: 2px solid #e3b2c5;
  min-height: 10px;
}

#player_info
{
}

.tab_header td
{
background-color: lightgrey;
width: 108px;
margin: 10px 10px 0 0;
text-align: center;
background: lightgrey no-repeat top left;
}

.tab_header td a:link, .tab_header td a:visited
{
//	text-decoration: none;
	color: black;
}

table.full
{
width: 100%;
font-size: 11px;
}

/* Style for the games */
.game_round
{
	font-weight: bold;
	font-size: 16px;
	padding: 3px;
	width: 100%;
	background-color: #bbcc99;
}
.game_date
{
	font-weight: bold;
	font-size: 11px;
	border-bottom: medium solid #ffcc00;
	padding: 1px;
	width: 100%;
}
.game_toplay
{
	position: relative;
	font-weight: bold;
	font-size: 16px;
	padding: 3px;
	width: 100%;
}
.phase
{
	position: relative;
}
.game
{
	position: relative;
}
	.game_inline_date
	{
		width: 15%;
		vertical-align: top;
	}
	.game_score
	{
		width: 100%;
		padding: 0px;
		border-spacing: 0px;
	}
.game_show_score
{
  width: 100%;
}
.game_show_goals
{
  font-size: 12px;
  color: green;
}
.game_show_home_team
{
  width: 50%;
}
.game_show_away_team
{
  width: 50%;
  text-align: right;
}
.game_show_home_score
{
  text-align: right;
  width: 0%;
}
.game_show_away_score
{
  text-align: left;
  width: 0%;
}
.game_show_x
{
  text-align: center;
}

.popupbody
{
  text-align: left;
  padding: 10px;
  font-weight: bold;
  font-size: 12px;
  border: 1px solid #CCFFFF;
  background: #99CCCC;
  color: #FFFFFF;
}

.drop_receiving
{
  border: 2px solid #000000;
}

#graphs
{
  margin-top: 10px;
}

.panel
{
  clear: both;
  background-color: #3e3e3e;
  padding: 5px;
  margin-top: 4px;
  font-size: 12px;
  color: #ccc;
}
.panel div.select-div
{
  display: none;
}
.panel div.select-div.active-tab-body
{
  display: block;
  padding-top: 10px;
  min-height: 30px;
}

#tabs a
{
  font-size: 12px;
  padding: 5px 8px;
  margin-left: 6px;
  background-color: #DCDCDC;
  text-decoration: none;
  color: #999999;
}

#tabs a.active-tab
{
  background-color: #3e3e3e;
  color: #ccc;
}

#home_goals, #away_goals
{
  width: 100%;
}

.goals
{
  font-size: 12px;
  vertical-align: top;
}

.players {
  font-size: 12px;
  vertical-align: top;
}

DIV.table_row {
  background: none; color: #000000;
  margin-top: 0; margin-right: auto; margin-bottom: 0; margin-left: auto;
  padding: 0; text-align: center; width: 99%;
}
DIV.table_cell {
  border: none;
  min-height: 1px;
  float: left;
  margin: 0;
  padding: 0;
}

.game_time {
  width: 8%;
}
.home_logo {
  float: left;
  width: 13%;
  text-align: center;
}
.home_name {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  float: left;
  width: 87%;
}
.home_team {
  width: 31%;
  text-align: left;
}
.home_score {
  width: 4%;
  text-align: right;
}
.game_x {
  width: 4%;
  text-align: center;
}
.away_score {
  width: 4%;
  text-align: left;
}
.away_team {
  width: 31%;
  text-align: right;
}
.away_logo {
  width: 13%;
  text-align: center;
  float: right;
}
.away_name {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  float: right;
  width: 87%;
}
.show_spacer {
  width: 3%;
}
.show_info {
  width: 5%;
  text-align: center;
  text-decoration: underline;
  cursor: pointer;
  color: blue;
}
.show_info a {
  display: block;
}
.edit {
}

DIV.clearer {
  clear: both; margin: 0; padding: 0; width: auto;
}

.draggable {
  cursor: move;
}

.draggable:hover {
  border: 2px solid #000000;
}

#home_squad {
  border: 2px solid #e3b2c5;
  padding: 0 0 10px 0;
}
#away_squad {
  border: 2px solid #e3b2c5;
  padding: 0 0 10px 0;
}

.item-with-separator {
  border-bottom: 1px solid #ABB561;
  padding-top: 10px;
  padding-bottom: 10px;
  margin-bottom: 10px;
}

.comment {
  border-bottom: 1px solid #ABB561;
  padding-top: 10px;
  padding-bottom: 10px;
  margin-bottom: 10px;
}
.comment:hover {
  background-color: #D3DFBA;
}

.user-name {
  overflow: hidden;
  white-space: nowrap;
  width: 90%;
  font-size: small;
}
.comment-date {
  font-size: small;
}
.comment-text {
  padding: 10px;
}

img.user-logo {
  border: 1px solid #ABB561;
}

.updated-game {
  border-bottom: 1px solid #ABB561;
  padding-bottom: 10px;
  margin-bottom: 10px;
}

.promo {
  padding: 10px;
  border: 1px solid #ABB561;
  margin-bottom: 10px;
}

#about_me {
  background-color: #D3DFBA;
  height: 200px;
  line-height: 120%;
  margin: 0px 0px 10px 10px;
  overflow: auto;
  padding: 10px;
  width: 212px;
}

.user-details {
  width: 100%;
  font-size: 14px;
}
.user-details tr {
  vertical-align: top;
}
.user-details td {
  padding: 4px 0;
}

.sort_options {
  border: 2px solid #ABB561;
  min-height: 15px;
  min-width: 100px;
}
.sort_options div {
  font-size: 14px;
  width: 100%;
  border: 1px solid #ABB561;
}
#unselected_options {
  color: #999999;
}

.ui-datepicker { font-size: 0.8em !important; }
.ui-datepicker-trigger { top: 5px !important; width: 2em !important; }

.thumb-upload-input img {
  max-height: 100px;
  max-width: 100px;
}
